@model IEnumerable<HotelManager.DTO.RoomModel>

@{
    ViewData["Title"] = "Rooms";
}

<h4>Rooms</h4>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NextAvailableDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NextAvailableDateString)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.Status)
                </td>
                <th>
                    <a asp-controller="room" asp-action="cancelBooking" asp-route-id="@item.Id">Cancel booking</a>
                </th>
            </tr>
        }
    </tbody>
</table>
